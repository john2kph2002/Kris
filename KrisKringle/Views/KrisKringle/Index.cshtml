                <a id="btnLogoutMain" type="submit" class="btn-outline btn-sm" style="font-size: xx-large;margin-left:50px;float:left;" asp-action="Index" asp-controller="Home"><i id="jrcfa" class="fa fa-sign-out fa-lg"></i></a>
